	"type" : "mouf-library",
	"authors" : [{
			"name" : "David NÃ©grier",
			"email" : "d.negrier@thecodingmachine.com",
			"homepage" : "http://mouf-php.com"
		}
	],
	"keywords" : [
		"drupal",
		"mvc",
		"splash",
		"mouf"
	],
	"homepage" : "https://github.com/thecodingmachine/integration.drupal.druplash",
	"license" : "MIT",
	"require" : {
		"composer/installers" : "*",
		"mouf/security.rightsservice-splash" : "~4.0",
