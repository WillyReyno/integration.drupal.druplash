		"mouf/mvc.splash-implementation" : "5.0.*"
	},
	"autoload" : {
		"psr-0" : {
			"Mouf" : "src/"
		}
	},
	"extra" : {
		"installer-paths" : {
			"sites/all/modules/druplash/" : "mouf/integration.drupal.druplash-drupalmodule"
